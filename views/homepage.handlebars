<ol class="post-list">
    {{#each posts}}
  <li>
    <article class="post">
      <div class="title">
          <h3>
              <a href="post/{{id}}">{{title}}</a>
          </h3>
          <p>
              {{content}}
          </p>
      </div>
      <div class="meta">
        <p>Posted by {{user.username}} on </p>{{created_at}}
      </div>
    </article>
  </li>
  {{/each}}
</ol>