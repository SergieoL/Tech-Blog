<ol class="post-list">
    {{#each posts}}
  <li>
    <article class="post">
      <div class="title">
          <h3>{{title}}</h3>
          <p>
              {{content}}
          </p>
      </div>
      <div class="meta">
        on
        {{created_at}}
        |
        <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
      </div>
    </article>
  </li>
  {{/each}}
</ol>